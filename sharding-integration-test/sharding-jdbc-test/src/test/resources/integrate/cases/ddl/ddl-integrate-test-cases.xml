        <assertion init-sql="CREATE TABLE t_log(id int, status varchar(10))" table="t_log" expected-data-file="empty_log.xml" />
    </ddl-test-case>
    
    <ddl-test-case sql-case-id="truncate_table">
        <assertion init-sql="CREATE TABLE t_log(id int, status varchar(10))" table="t_log" expected-data-file="empty_log.xml" />
    </ddl-test-case>
    
    <ddl-test-case sql-case-id="truncate_table_only">
